Package: tidymicrobiome
Type: Package
Title: R packages for microbiome data processing and analysis
Version: 0.1.0
Authors@R: c(
    person(given = "Xiaotao",
           family = "Shen",
           role = c("aut", "cre"),
           email = "shenxt1990@outlook.com",
           comment = c(ORCID = "0000-0002-9608-9964"))
